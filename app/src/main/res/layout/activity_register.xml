<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:layout_marginTop="74dp" />

    <EditText
        android:id="@+id/et_full_name"
        android:layout_width="278dp"
        android:inputType="text"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Full Name"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/et_dog_name"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Dog Name"
        android:textColorHint="@color/white"/>

    <EditText
        android:id="@+id/et_dog_breed"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Dog's Breed"
        android:textColorHint="@color/white"/>

    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_dog_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Dog's Birthday"
            android:textColorHint="@color/white"/>

        <Spinner
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Dog's Gender"
            android:textColorHint="@color/white"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:drawableRight="@drawable/fill_2"
        android:fontFamily="sans-serif"
        android:text="Next"
        android:textColor="#db4437"
        android:textSize="16sp"
        android:textStyle="normal" />


</LinearLayout>