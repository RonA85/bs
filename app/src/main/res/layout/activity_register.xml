<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:layout_below="@+id/floatingActionButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="21dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_picture"
            android:layout_width="29dp"
            android:layout_marginRight="120dp"
            android:src="@drawable/shape"
            android:scaleType="center"
            android:layout_height="29dp"
            android:layout_gravity="bottom|end" />

    </FrameLayout>


    <EditText
        android:id="@+id/et_full_name"
        android:layout_width="278dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:hint="Full Name"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/et_dog_name"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:hint="Dog Name"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/et_dog_breed"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:hint="Dog's Breed"
        android:textColorHint="@color/white" />

    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

       <TextView
           android:id="@+id/tv_date"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="true"
           android:hint="16/03/2018"
           android:textColorHint="@color/white"
           android:layout_weight="1"/>

        <Spinner
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Dog's Gender"
            android:textColorHint="@color/white" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:text="Done"
        android:textColor="#db4437"
        android:textSize="16sp"
        android:textStyle="normal" />


</LinearLayout>